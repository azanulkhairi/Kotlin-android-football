<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PlayerDetailActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/image_player_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/linear_posture"
                android:layout_below="@+id/image_player_detail"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/weight"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/text_weight"
                            android:text="@string/weight"
                            android:textStyle="bold"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/val_weight"
                            android:layout_below="@+id/text_weight"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/text_height"
                            android:text="@string/height"
                            android:textStyle="bold"
                            android:textSize="@dimen/activity_vertical_margin"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/val_height"
                            android:layout_below="@+id/text_height"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/pos"
                android:layout_below="@+id/linear_posture"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/position"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_below="@+id/pos"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/player_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>